package  {		// importar no library path o ficheiro libs/FLVPlaybackAS3.swc	// calocar pasta "video" com video Promo.mp4" para dentro da pasta src	// importar o ficheiro 'FLVPlaybackAS3.swc' em 'Advanced ActionScript 3.0 Settings' na tab 'Library path'	import flash.display.Sprite;	import flash.display.Stage;	import fl.video.FLVPlayback;	import flash.events.Event;	import flash.events.KeyboardEvent;		public class video extends Sprite{				public var myVideo:FLVPlayback;		public var myVideoM:FLVPlayback;		public var userV:uint;		public var vidSel:uint;				public function video()		{			userV = 0;			vidSel = 0;			myVideo = new FLVPlayback();			myVideo.source = "/src/video/Promo.mp4";			myVideo.height = 800;			myVideo.width = 1280;			myVideo.scaleMode  = "exactFit";			myVideo.volume = 0;			addChild(myVideo);						myVideoM = new FLVPlayback();			myVideoM.source = "/src/video/MakingOff.mp4";			myVideoM.height = 800;			myVideoM.width = 1280;			myVideoM.scaleMode  = "exactFit";			myVideoM.volume = 0;						//myVideo.playheadTime = 39;			myVideo.addEventListener(Event.ENTER_FRAME, fl_ClickToSeekToCuePoint);			addEventListener(CustomEvent.VIDEO_STATE, playLoop);								}		public function fl_ClickToSeekToCuePoint(event:Event):void		{			if(vidSel == 0)			{				myVideo.play();				myVideoM.stop();				/*if(){									}*/				if (userV == 0)				{					if(myVideo.playheadTime > 5 && myVideo.playheadTime < 5.1)					{						myVideo.playheadTime = 2.4;					}					if(myVideo.playheadTime > 17.5 && myVideo.playheadTime < 17.6)					{						myVideo.playheadTime = 14.5;					}					if(myVideo.playheadTime > 23 && myVideo.playheadTime < 23.1)					{						myVideo.playheadTime = 21.6;					}					if(myVideo.playheadTime > 33 && myVideo.playheadTime < 33.1)					{						myVideo.playheadTime = 31.5;					}				}				if(myVideo.playheadTime > 41.5 && myVideo.playheadTime < 41.7)				{					myVideo.playheadTime = 0;				}			}			if(vidSel == 1)			{				myVideo.stop();				if(myVideoM == null)				{					addChild(myVideoM);				}				myVideoM.playheadTime = 0;				myVideoM.play();			}		}		public function playLoop(event:CustomEvent):void		{			userV = event.io;		}		public function removeListeners():void{			removeEventListener(CustomEvent.VIDEO_STATE, playLoop);			myVideo.removeEventListener(Event.ENTER_FRAME, fl_ClickToSeekToCuePoint);		}	}}