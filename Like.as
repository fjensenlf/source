package  {		import flash.display.Loader;	import flash.display.Bitmap;	import flash.display.Sprite;	import flash.net.URLRequest;	import caurina.transitions.Tweener;	import flash.events.Event;		public class Like extends Sprite{		public var loader:Loader;		public var like:Bitmap;		public function Like() {						loader= new Loader();			loader.load(new URLRequest("/src/images/embedded/like.png"));			loader.contentLoaderInfo.addEventListener(Event.COMPLETE, onComplete);								}		function onComplete(e:Event):void		{			like = Bitmap(loader.content);			like.x = 500;			like.y = 280;			//like.alpha = 0;			          	like.smoothing=true;          	addChild(like);			tween();					}		public function tween() {			var setBool = function(bool:Boolean) {				if(bool){					remChild();				}			}			Tweener.addTween(like, {y:200, time: 2.5, transition: "easeOutElastic"});			Tweener.addTween(like, {x:450, y:150, width:400, height:444, alpha:0, time: 0.2, transition: "linear",delay:2.5, onComplete:setBool, onCompleteParams:[true]});					}		public function remChild() {			dispatchEvent(new NavigationEvent(NavigationEvent.REMOVE_LIKE));		}	}	}